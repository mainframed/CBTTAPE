                            *last->fdata.data = 0xed ;
                          else
                            *last->fdata.data = '*' ;
                        }
                      else
                        {
                          /* BAD ERROR: This should never happen */
                          sprintf(msg,
                            "Cant locate control part of checkbox %s",
                            curr->tsovar) ;
                          execmsg("WIN068S",msg) ;
                        }
                    }
                }

              /* field found - look no further through list */
              break ;

            }  /* of correct field */

        }  /* of correct row */

      last = curr ;
      curr = curr->next ;
    }  /* of scan field list */
}


