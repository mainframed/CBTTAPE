/*-------------------------------------------------------------------*/
/* Check color attribute and copy if valid.                          */
/*-------------------------------------------------------------------*/
int modsym(char *out,
           char in )
{
  switch (in)
    {
    case DFLT:
      *out = in ;
      return 0 ;
    case APL:
      if (sdcb.aplflg)
        {
          *out = in ;
          return 0 ;
        }
      else
        return 1 ;
    default:
      if (sdcb.loadflg)
        {
          if ((in>=0x40) && (in<=0xef))
            {
              *out = in ;
              return 0 ;
            }
          else
            return 1 ;
        }
      else
        return 1 ;
    }
}

/*-------------------------------------------------------------------*/
/* Check color attribute and copy if valid.                          */
/*-------------------------------------------------------------------*/
int modcolor(char *out,
             char in )
